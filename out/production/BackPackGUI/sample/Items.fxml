        <font>
          <Font size="35.0" />
        </font>
    </Button>
    <Button fx:id="calculate" disable="true" layoutX="730.0" layoutY="350.0" maxHeight="50.0" maxWidth="50.0" mnemonicParsing="false" onMouseClicked="#calculate" prefHeight="50.0" prefWidth="50.0" text="➔" wrapText="true">
        <font>
            <Font size="33.0" />
        </font>
    </Button>
    <Label layoutX="414.0" layoutY="91.0" text="Размер рюкзака:" textFill="WHITE">
        <font>
          <Font size="20.0" />
        </font>
    </Label>
    <Label layoutX="630.0" layoutY="91.0" text=" " textFill="WHITE">
        <font>
          <Font size="20.0" />
        </font>
    </Label>
</AnchorPane>
