<AnchorPane layoutY="64.0" prefHeight="416.0" prefWidth="800.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ItemsController">
    <TableView fx:id="itemTable" layoutX="12.0" layoutY="12.0" prefHeight="400.0" prefWidth="267.0">
        <placeholder>
            <Label text="No items!" />
        </placeholder>
        <columns>
            <TableColumn fx:id="name" editable="false" prefWidth="80.0" resizable="false" sortable="false" text="Name" />
            <TableColumn fx:id="mass" editable="false" prefWidth="85.0" resizable="false" sortable="false" text="Mass" />
            <TableColumn fx:id="price" editable="false" prefWidth="85.0" resizable="false" sortable="false" text="Price" />
        </columns>
    </TableView>
    <Button id="btnBack" layoutX="7.0" layoutY="-57.0" maxHeight="50.0" maxWidth="50.0" mnemonicParsing="false" onMouseClicked="#back" prefHeight="50.0" prefWidth="50.0" text="➔" textAlignment="CENTER">
        <font>
            <Font size="33.0" />
        </font>
    </Button>
    <Text layoutX="476.0" layoutY="37.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Mass:" />
    <Text layoutX="598.0" layoutY="37.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Price:" />
    <TextField id="nameEdit" fx:id="nameEdit" layoutX="305.0" layoutY="20.0" promptText="Name" />
    <Spinner fx:id="massEdit" editable="true" layoutX="512.0" layoutY="20.0" max="100" min="0" prefHeight="25.0" prefWidth="70.0">
        <valueFactory>
            <SpinnerValueFactory.DoubleSpinnerValueFactory amountToStepBy="0.1" initialValue="5.0" max="999999" min="0.0" />
        </valueFactory>
    </Spinner>
    <Spinner fx:id="priceEdit" editable="true" layoutX="633.0" layoutY="20.0" max="100" min="0" prefHeight="25.0" prefWidth="70.0">
        <valueFactory>
            <SpinnerValueFactory.DoubleSpinnerValueFactory amountToStepBy="0.1" initialValue="5.0" max="999999" min="0.0" />
        </valueFactory>
    </Spinner>
    <Button layoutX="739.0" layoutY="16.0" maxHeight="32.0" maxWidth="32.0" minHeight="32.0" minWidth="32.0" mnemonicParsing="false" onMouseClicked="#addItem" prefHeight="32.0" prefWidth="32.0" text="➕" textAlignment="CENTER" wrapText="true">
        <font>
          <Font size="22.0" />
        </font>
    </Button>
